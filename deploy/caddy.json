{
    "admin": {
        "listen": "0.0.0.0:2019"
    },
    "apps": {
        "http": {
            "servers": {
                "srv0": {
                    "listen": [
                        ":80"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "path": [
                                        "/api/*"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "django:8000"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "not": [
                                        {
                                            "path": [
                                                "/api/*"
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "rewrite",
                                    "uri": "/index.html"
                                },
                                {
                                    "handler": "file_server",
                                    "root": "/usr/share/nginx/html"
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}
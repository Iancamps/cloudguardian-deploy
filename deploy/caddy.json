{
    "admin": {
        "listen": "0.0.0.0:2019"
    },
    "apps": {
        "http": {
            "servers": {
                "srv0": {
                    "listen": [
                        ":80"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "path": [
                                        "/api/*"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "django:8000"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "path": [
                                        "/assets/*",
                                        "/vite.svg"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "file_server",
                                    "root": "/srv"
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "not": [
                                        {
                                            "path": [
                                                "/api/*",
                                                "/assets/*",
                                                "/vite.svg"
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "rewrite",
                                    "uri": "/index.html"
                                }
                            ]
                        },
                        {
                            "handle": [
                                {
                                    "handler": "file_server",
                                    "root": "/srv",
                                    "index_names": [
                                        "index.html"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}
{
    "apps": {
        "http": {
            "servers": {
                "Cloud_Guardian": {
                    "routes": [
                        {
                            "match": [
                                {
                                    "path": [
                                        "/login"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "rate_limit",
                                    "rate_limit": {
                                        "requests": 3,
                                        "window": "1m"
                                    }
                                },
                                {
                                    "handler": "authenticate",
                                    "basic": {
                                        "users": {}
                                    }
                                },
                                {
                                    "handler": "static_response",
                                    "body": "Acceso concedido"
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}